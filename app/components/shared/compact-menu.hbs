{{! the role="menu" is added by the AuDropdown component, so we can ignore the rule here.}}
{{! template-lint-disable require-context-role}}
<AuDropdown
  @alignment="left"
  @title="Menu modules"
  @buttonLabel="Account settings"
>
  {{#if this.currentSession.canAccessMandaat}}
    <AuLink @route="mandatenbeheer.mandatarissen" role="menuitem">
      <AuIcon @icon="user-fill" @alignment="left" />
      Mandatenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessWorshipMinisterManagement}}
    <AuLink @route="worship-ministers-management" role="menuitem">
      <AuIcon @icon="user" @alignment="left" />
      Bedienarenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessEredienstMandatenbeheer}}
    <AuLink @route="eredienst-mandatenbeheer.mandatarissen" role="menuitem">
      <AuIcon @icon="users-four-of-four" @alignment="left" />
      Mandatenbeheer
    </AuLink>
  {{/if}}
</AuDropdown>
