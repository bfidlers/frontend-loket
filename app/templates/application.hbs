{{head-layout}}
<div class="container">
  {{wu-widget src=header class="vo-header-widget"}}
  {{#if session.isAuthenticated}}
    <div class="container-flex--contain">
      <div class="grid grid--collapse">
        <div class="col--2-12 col--3-12--m u-hidden--s">
          <div class="container-flex--contain">
            <div class="sidebar">
              <div class="sidebar__header">
								<div class="user-toggle">
								  <nav class="text-left u-align-left">
								    <p>Miet Claes</p>
								    <div class="user-toggle__name">Gemeente Gent</div>
								    <div class="popover js-popover user-toggle__toggle">
								      <button class="vi vi-up-down-arrows vi-u-s js-popover__toggle"></button>
								      <ul class="popover__content">
								        <li>
								        	{{acmidm-logout class="popover__link"}}
								        </li>
								        <li>
								          <a class="popover__link" href="#">Wissel van bestuurseenheid</a>
								        </li>
								      </ul>
								    </div>
								  </nav>
								</div>
              </div>
              <div class="sidebar__content">
                <nav class="side-navigation">
                  <div class="side-navigation__content">
                    <ul class="side-navigation__group">
                      {{#if currentSession.canAccessToezicht}}
                        <li class="side-navigation__item">
                          {{#link-to "toezicht.inzendingen"}}Toezicht{{/link-to}}
                        </li>
                      {{/if}}
                      {{#if currentSession.canAccessBerichten}}
                        <li class="side-navigation__item">
                          {{#link-to "berichtencentrum.berichten"}}Berichtencentrum{{/link-to}}
                        </li>
                      {{/if}}
                      {{#if currentSession.canAccessBbcdr}}
                        <li class="side-navigation__item">
                          {{#link-to "bbcdr.rapporten"}}BBC DR{{/link-to}}
                        </li>
                      {{/if}}
                      {{#if currentSession.canAccessMandaat}}
                        <li class="side-navigation__item">
                          {{#link-to "mandatenbeheer.mandatarissen"}}Mandatenbeheer{{/link-to}}
                        </li>
                        <!-- Disable administratieve gegevens
                             <li class="side-navigation__item">
                             {{#link-to "administratieve-gegevens.index"}}Administratieve<br>gegevens{{/link-to}}
                             </li>
                        -->
                      {{/if}}
                      {{#if currentSession.canAccessLeidinggevenden}}
                        <li class="side-navigation__item u-hidden">
                          {{#link-to "leidinggevendenbeheer.bestuursfuncties"}}Leidinggevendenbeheer{{/link-to}}
                        </li>
                      {{/if}}
                    </ul>
                  </div>
                </nav>
              </div>
              <div class="sidebar__footer u-align-center">
                <a href="https://loket.lokaalbestuur.vlaanderen.be/handleiding/" target="_blank" class="button button--alt button--small button--block u-spacer--tb--tiny"><i class="vi vi-book vi-u-s"></i> Bekijk handleiding</a>
              </div>
            </div>
          </div>
        </div>
        {{outlet}}
      </div>
    </div>
  {{else}}
    {{outlet}}
  {{/if}}
</div>
