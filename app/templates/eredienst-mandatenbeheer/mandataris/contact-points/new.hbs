
<AuToolbar @border="bottom" @size="large">
  <AuToolbarGroup>
    <AuHeading @skin="2">Voeg nieuwe contactgegevens toe</AuHeading>
  </AuToolbarGroup>
  <AuToolbarGroup>
  </AuToolbarGroup>
</AuToolbar>

<div class="au-c-body-container">
  <div class="au-o-grid__item au-u-2-3@medium au-u-1-1 ">
    <div class="au-u-margin-bottom-small au-u-2-3@medium">
      <label class="au-c-label" for="email">
          E-mail
      </label>
      <AuInput
        id="email"
        @width="block"
        @value={{this.email}}
      />
    </div>
    <div class="au-u-margin-bottom-small au-u-2-3@medium">
      <label class="au-c-label" for="telephone">
          Telefoonnummer
      </label>
      <AuInput
        id="telephone"
        @width="block"
        @value={{this.telephone}}
      />
    </div>
    <div class="au-u-margin-bottom-small">
      <AdressenregisterSelector
        @address={{this.adres}}
        @onChange={{this.updateAdres}}
      />
    </div>
  </div>
</div>

<AuToolbar @border="top" @size="large">
  <AuToolbarGroup>
    <AuButton {{on 'click' (perform this.submit)}}>Toevoegen</AuButton>
    <AuLink @route="eredienst-mandatenbeheer.mandataris.edit" @skin="button-secondary">Annuleer</AuLink>
  </AuToolbarGroup>
  <AuToolbarGroup>
    {{#if this.submit.isRunning}}
      <AuAlert
        class="au-u-margin-none"
        @icon="info-circle"
        @title="Aan het toevoegen..."
        @skin="info"
        @size="small">
      </AuAlert>
    {{/if}}
  </AuToolbarGroup>
</AuToolbar>