<Mandatenbeheer::PowerSelect
        @allowClear={{allowClear}}
        @disabled={{disabled}}
        @placeholder="Titelvoerend, effectief, waarnemend, verhinderd"
        @options={{statusCodes}}
        @selected={{_statusCode}}
        @searchField="label"
        @onChange={{action "select"}}
        as |status|>
  {{status.label}}
</Mandatenbeheer::PowerSelect>
