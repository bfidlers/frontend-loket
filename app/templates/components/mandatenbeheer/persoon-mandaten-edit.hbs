<div class="u-padding--trl--small u-border--light--bottom">
  <div class="grid">
    <div class="col--9-12">
      <h2 class="h3 u-spacer--bottom--tiny">Bewerk mandaten {{persoon.gebruikteVoornaam}} {{persoon.achternaam}}</h2>
    </div>
    <div class="col--3-12 u-align-right">
      {{#link-to 'mandatenbeheer.mandatarissen' class="link--icon--close"}}
        <span class="u-visually-hidden">Venster sluiten</span>
      {{/link-to}}
    </div>
  </div>
  <div>
    {{mandatenbeheer/persoon-card persoon=persoon}}
  </div>
</div>

<div class="container-flex--scroll u-padding--round--small">
  <h4 class="h6 sans-serif u-spacer--bottom--tiny">Alle mandaten</h4>
  <div class="u-hr u-spacer--bottom--small"></div>

  <ul>
    {{#each mandatarissen as |mandataris|}}
      {{mandatenbeheer/mandataris-edit
        class="link-list link-list--bordered"
        bestuursorganen=bestuursorganen
        mandataris=mandataris
        onSave=(action "mandatarisSaved")
        onCancelCreate=(action "mandatarisCreateCanceled")
      }}
    {{/each}}
  </ul>
  <a class="button button--alt button--block u-spacer--bottom--small" {{action "createMandataris"}}>
    <i class="vi vi-plus" aria-hidden="true"></i>Voeg nieuw mandaat toe
  </a>


  {{!-- This section is here temporarily for ABB to review all the mandates in August --}}
