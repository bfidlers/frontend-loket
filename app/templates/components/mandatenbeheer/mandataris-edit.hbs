<label class="form__label">Mandaat</label>
{{mandatenbeheer/mandaat-bestuursorganen-selector
  onSelect=(action 'setMandaat')
  bestuursorganen=bestuursorganen
  mandaat=mandaat
  class="temporary-select__wrapper temporary-select__wrapper--block u-spacer--bottom--small"
  allowClear=true
  disabled=viewMode
}}
<label class="form__label">Fractie</label>
{{mandatenbeheer/fractie-selector
  onSelect=(action 'setFractie')
  fractie=fractie
  allowClear=true
  class="temporary-select__wrapper temporary-select__wrapper--block u-spacer--bottom--small"
  disabled=viewMode}}
<label class="form__label">Beleidsdomeinen</label>
{{mandatenbeheer/beleidsdomein-selector-with-create
  onSelect=(action 'setBeleidsdomein')
  beleidsdomeinen=beleidsdomeinen
  class="temporary-select__wrapper temporary-select__wrapper--block u-spacer--bottom--small"
  disabled=viewMode
}}
<label class="form__label" for="mandataris-rangorde">Rangorde</label>
{{input
  class="input-field input-field--block u-spacer--bottom--small js-js-input-pattern-bound"
  placeholder="Eerste schepen"
  value=rangorde
  disabled=viewMode
}}
<label class="form__label">Status</label>
{{mandatenbeheer/mandataris-status-code-selector
  onSelect=(action "setStatusCode")
  statusCode=status
  class="temporary-select__wrapper temporary-select__wrapper--block u-spacer--bottom--small"
  allowClear=true
  disabled=viewMode
}}
{{#if statusError}}
  <div class="form__error">{{statusError}}</div>
{{/if}}
<div class="grid">
  <div class="col--6-12">
    <label class="form__label" for="datepicker-from">Geplande start</label>
    {{wu-datepicker
      placeholder="01-01-2018"
      class=(if startDateError "date-picker-mandataris-edit input-field--error" "date-picker-mandataris-edit")
      value=(mut startDate)
      dateFormat=dateFormat
      disabled=viewMode}}
    {{#if startDateError}}
      <div class="form__error">{{startDateError}}</div>
    {{/if}}
  </div>
  <div class="col--6-12">
    <label class="form__label" for="datepicker-to">Gepland einde</label>
    {{wu-datepicker
      placeholder="01-01-2019"
      class=(if endDateError "date-picker-mandataris-edit input-field--error" "date-picker-mandataris-edit")
      value=endDate
      dateFormat=dateFormat
      disabled=viewMode}}
    {{#if endDateError}}
      <div class="form__error">{{endDateError}}</div>
    {{/if}}
  </div>
</div>
<div class="u-padding--round--small u-border--light--top u-align-right">
  {{#if saveError}}
    {{wu-alert message="Er is een fout opgetreden tijdens het opslaan, gelieve opnieuw te proberen of de systeembeheerder te contacteren " isError=true}}
  {{/if}}
  {{#if save.isRunning}}
    <div class="loader-wrapper">
      <div class="loader">
        <span class="u-visually-hidden">Aan het laden</span>
      </div>
    </div>
  {{else}}
    {{#if viewMode}}
      {{#wu-button class="button button--narrow mandate-new-info-button toggle-mandate-new" onClick=(action "edit") }} Editeer {{/wu-button}}
    {{else}}
      {{#wu-button class="button button--narrow button--alt toggle-mandate-new" onClick=(action "cancel") }} Annuleer {{/wu-button}}
      {{#wu-button class="button button--narrow mandate-new-info-button toggle-mandate-new" onClick=(action "save") }}
        {{#if createMode}}
          Voeg toe
        {{else}}
          Sla op
        {{/if}}
      {{/wu-button}}
    {{/if}}
  {{/if}}
</div>
