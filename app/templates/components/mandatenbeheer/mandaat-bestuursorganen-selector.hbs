<Mandatenbeheer::PowerSelect
        @searchEnabled={{true}}
        @allowClear={{allowClear}}
        @disabled={{disabled}}
        @placeholder="Zoek mandaat"
        @options={{mandaten}}
        @selected={{_mandaat}}
        @searchField="bestuursfunctie.label"
        @onChange={{action "select"}}
        @triggerId="mandaat"
        as |mandaat|>
  {{mandaat.bestuursfunctie.label}}
</Mandatenbeheer::PowerSelect>
