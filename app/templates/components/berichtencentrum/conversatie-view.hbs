{{berichtencentrum/conversatie-view-header conversatie=model close=close}}

<div class="container-flex--scroll u-padding--round--small">
  {{#each (sort-by 'verzonden' model.berichten) as |bericht|}}
    {{berichtencentrum/bericht-view bericht=bericht conversatie=model}}
    <div class="u-hr u-spacer--tb--small"></div>
  {{/each}}
  {{berichtencentrum/conversatie-reactie conversatie=model}}
</div>
<div class="u-padding--round--small u-border--light--top u-align-right">
  {{#wu-button onClick=(action "close") isNarrow=true isAlt=true class="button--save"}}Sluit venster{{/wu-button}}
</div>
