{{#if this.isExpanded}}
<div {{auto-focus}}>
    <AuHeading @level="3" @skin="5" class="au-u-margin-bottom-small">
      Uw reactie
    </AuHeading>

    <div class="au-o-grid au-o-grid--flush">
      <div class="au-o-grid__item au-u-1-5">
        <p class="au-c-small-text"><strong>Naar</strong></p>
      </div>
      <div class="au-o-grid__item au-u-4-5">
        <p class="au-c-small-text">
          {{#if this.originator}}
            {{this.originator.naam}}
            {{ else }}
            Aan het laden...
          {{/if}}
        </p>
      </div>
      <div class="au-o-grid__item au-u-1-5">
        <p class="au-c-small-text"><strong>Van</strong></p>
      </div>
      <div class="au-o-grid__item au-u-4-5">
        <p class="au-c-small-text">
          {{#if this.currentSession.groupContent.naam}}
            {{this.currentSession.groupContent.naam}}
          {{else}}
            Aan het laden...
          {{/if}}
        </p>
      </div>
    </div>

    <p class="au-c-small-text au-u-margin-top-small">
      <strong>Uw antwoord als bijlage</strong>
    </p>

    <div class="au-u-margin-top-tiny">
      {{#each this.bijlagen as |bijlage|}}
        <VoMuFileCard @file={{bijlage}} @onDelete={{this.deleteFile}} />
      {{/each}}
      <VoMuFileDropzone @onFinishUpload={{this.attachFile}} @maxFileSizeMB="1024" />
    </div>

    <AuButtonGroup>
      <AuButton {{on 'click' this.verstuurBericht}} @disabled="{{this.cantSend}}" class="js-accordion__toggle js-accordion-bound">
        Verstuur bericht
      </AuButton>
      <AuButton {{on 'click' this.collapseMe}} @skin="secondary" class="js-accordion__toggle js-accordion-bound">
        Verwijder nieuw bericht
      </AuButton>
    </AuButtonGroup>
  </div>
{{else}}
  <div>
    <AuButton {{on 'click' this.expandMe}} @width="block">
      <AuIcon @icon="message" @alignment="left" />
      Plaats reactie
    </AuButton>
  </div>  
{{/if}}

  