{{#if (not isExpanded)}}
  {{wu-button icon="vi-mail" label="Plaats reactie" onClick=(action "expandMe") isBlock=true isAlt=true class="js-accordion__toggle js-accordion-bound"}}
{{else}}
  <div class="js-accordion u-spacer--small js-accordion--open">
    <div class="accordion__content">
      <div class="u-hr u-spacer--tb--small"></div>
      <h3 class="h6 u-spacer--small">Uw reactie</h3>

      <div class="grid u-spacer--tiny">
        <div class="col--2-12">
          <p class="smaller"><strong>Naar</strong></p>
        </div>
        <div class="col--10-12">
          <p class="smaller">
            {{#if originator}}
              {{originator.naam}}
              {{ else }}
              Aan het laden...
            {{/if}}
          </p>
        </div>
        <div class="col--2-12">
          <p class="smaller"><strong>Van</strong></p>
        </div>
        <div class="col--10-12">
          <p class="smaller">
            {{#if currentSession.groupContent.naam}}
              {{currentSession.groupContent.naam}}
            {{else}}
              Aan het laden...
            {{/if}}
          </p>
        </div>
      </div>

      <p class="smaller u-spacer--tiny">
        <strong>Uw antwoord als bijlage</strong>
      </p>
      {{#each bijlagen as |bijlage|}}
        {{vo-mu-file-card file=bijlage onDelete=(action "deleteFile") }}
      {{/each}}
      {{vo-mu-file-dropzone onFinishUpload=(action "attachFile") maxFileSizeMB=1024}}

      {{wu-button label="Verstuur bericht" onClick=(action 'verstuurBericht') disabled=canSend isNarrow=true isSmall=true class="js-accordion__toggle js-accordion-bound"}}
      {{wu-button label="Verwijder nieuw bericht" onClick=(action 'collapseMe') isNarrow=true isSmall=true isAlt=true class="js-accordion__toggle js-accordion-bound"}}
    </div>
  </div>
{{/if}}
