{{!--{{berichtencentrum/bericht-view-header bericht=bericht}}--}}
<div class="js-accordion {{if isExpanded "js-accordion--open"}}">
    <div class="grid grid--collapse">
        <div class="col--6-12">
            <h3 class="h6">Geen bericht 'TITLE'</h3>
            <p class="smaller">Antwoord op {{conversatie.typeCommunicatie}}</p>
        </div>
        <div class="col--5-12 u-align--right">
            <p class="text-fade smaller">Aangekomen: {{bericht.niceFormatAangekomen}}</p>
            <p class="smaller text-fade">Verzonden: {{bericht.niceFormatVerzonden}}</p>
        </div>
        <div class="col--1-12 u-align--right" {{action 'expand'}}>
            <span class="js-accordion__toggle js-accordion-bound" type="button"><i class="vi vi-expand vi-u-s" aria-hidden="true"></i><span class="u-visually-hidden">Toon / verberg bericht</span></span>
        </div>
    </div>
    <div class="accordion__content u-spacer--top--small">
        <div>Van: {{bericht.van.naam}}</div>
        <div>Naar: {{bericht.naar.naam}}</div>
        <div>
            <p
                class="smaller"
                style="text-overflow: ellipsis; overflow: hidden; white-space: pre; color:gray;">Auteur: {{bericht.auteur.fullName}}</p>
        </div>
        <p class="u-spacer--bottom--small small">{{bericht.inhoud}}</p>
        <!--<div class="upload__files upload__files--has-files" data-upload-input-name="files2[4]">-->
            {{#each bericht.bijlagen as |bijlage|}}
                {{vo-mu-file-card file=bijlage onDelete=null active=false}}
            {{/each}}
        <!--</div>-->
    </div>
</div>