<div class="form__row u-spacer--tiny">
  <table class="data-table data-table--tight u-spacer--tb--small">
    <thead>
      <tr>
        <th>Links naar documenten</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      {{#if saveAddress.isRunning}}
        Link aan het controleren...
      {{else}}
        {{#each urls as |url|}}
          <tr>
            <td>
              {{input
                class="input-field input-field--block input-field--small"
                placeholder="http://wwww.besluiten.be/besluit"
                name="URL-besluit-URL"
                value=(mut url.address)
              }}
            </td>
            <td>
              <a class="toggle js-accordion__toggle small link--icon u-spacer--bottom--small js-accordion-bound" {{action "delete" url}}>
                Verwijder
              </a>
              {{!--  <a class="toggle js-accordion__toggle small link--icon u-spacer--bottom--small js-accordion-bound" {{action "save" url}}>
                Haal op
              </a>
              --}}
            </td>
          </tr>
        {{/each}}
        {{/if}}
    </tbody>
  </table>
</div>

{{#unless disabled}}
<div class="js-accordion">
  <a class="toggle js-accordion__toggle small link--icon u-spacer--bottom--small js-accordion-bound"
      {{action "addUrlField"}}>
    <i class="vi vi-plus" aria-hidden="true"></i>Voeg een link naar document toe
  </a>
</div>
{{/unless}}
