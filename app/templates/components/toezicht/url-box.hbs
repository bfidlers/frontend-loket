<div class="form__row u-spacer--tiny">
	<div class="form__label">
		<label class="form__label">URL</label>
	</div>
	{{#each urls as |url|}}
	<div class="form__input">
		<div class="grid grid--collapse form-group">
			<div class="col--3-12">
				{{input class="input-field input-field--block input-field--disabled"
						placeholder="https://"
						name="URL-besluit-beschrijving"
						value=(get url 'protocol')}}
			</div>
			<div class="col--9-12">
				{{input class="input-field input-field--block input-field--disabled"
					placeholder="wwww.besluiten.be/besluit"
					name="URL-besluit-URL"
					value=(get url 'body')}}
			</div>
		</div>
	</div>
	{{/each}}
</div>

<div class="js-accordion">
	<a class="toggle js-accordion__toggle small link--icon u-spacer--bottom--small js-accordion-bound"
			{{action "addUrlField"}}>
		<i class="vi vi-plus" aria-hidden="true"></i>Voeg nog een url toe
	</a>
</div>