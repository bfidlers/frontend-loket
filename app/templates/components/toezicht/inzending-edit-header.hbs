<div class="grid">
  <div class="col--9-12">
    {{shared/document-status-pill inzending.status class="u-spacer--small"}}
    {{#if isNew}}
      <h2 class="h3">Aanlevering nieuw dossier</h2>
    {{else}}
      <h2 class="h3">Bekijk aanlevering dossier</h2>
    {{/if}}
  </div>
  <div class="col--3-12 u-align--right">
    <a {{action "close"}} class="link--icon--close">
      <span class="u-visually-hidden">Venster sluiten</span>
    </a>
  </div>
</div>
