{{toezicht/inzending-edit-header inzending=inzending isNew=isNew onClose=(action "close")}}

<div class="container-flex--scroll u-padding--round--small">
  {{toezicht/root-form-node solution=model onDynamicFormInit=(action "initDynamicForm")}}
  <div class="u-spacer"></div>
  {{#each files as |file|}}
    {{vo-mu-file-card file=file onDelete=(action "deleteFile") active=true}}
  {{/each}}
  {{vo-mu-file-dropzone onFinishUpload=(action "addFile") maxFileSizeMB=1024}}
</div>

<div class="u-padding--round--small u-border--light--top u-align-right">

  {{#if isNew}}
    {{#link-to "toezicht.inzendingen.index" class="button button--narrow button--alt delete-me-toggle-new"}}Annuleer{{/link-to}}
  {{else}}
    {{#link-to "toezicht.inzendingen.index" class="button button--narrow button--alt delete-me-toggle-new"}}Sluit{{/link-to}}
  {{/if}}

  {{#if canDelete}}
    {{#wu-link-button
       class="button button--narrow button--alt button--alt--warning delete-me-toggle-concept delete-me-toggle-modal-delete-concept"
       isNarrow=true isAlt=true onClick=(action "delete")
    }}
      Verwijder
    {{/wu-link-button}}
  {{/if}}

  {{#if isNew}}
    {{wu-link-button label="Bewaar" isNarrow=true isAlt=true onClick=(action "create") class="button button--narrow button--alt"}}
  {{else}}
    {{wu-link-button label="Bewaar" isNarrow=true isAlt=true onClick=(action "save") class="button button--narrow button--alt"}}
  {{/if}}

  {{#unless isNew}}
    {{#wu-link-button class="button delete-me-toggle-new u-spacer--tiny" onClick=(action "send")}}Verstuur
      <span class="button__info button__info--below">naar Vlaamse Overheid</span>
    {{/wu-link-button}}
  {{/unless}}

</div>
