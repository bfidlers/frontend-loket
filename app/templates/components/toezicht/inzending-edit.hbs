{{toezicht/inzending-edit-header inzending=inzending isNew=isNew onClose=(action "close")}}

<div class="container-flex--scroll u-padding--round--small">
  {{toezicht/root-form-node solution=model onDynamicFormInit=(action "initDynamicForm")}}
  <div class="u-spacer"></div>
  {{#each files as |file|}}
    {{vo-mu-file-card file=file onDelete=(action "deleteFile") active=true}}
  {{/each}}
  {{vo-mu-file-dropzone onFinishUpload=(action "addFile") maxFileSizeMB=1024}}
</div>
<div class="u-padding--round--small u-border--light--top u-align-right">
  {{#link-to "toezicht.inzendingen.index" class="button button--narrow button--alt"}}Sluit{{/link-to}}
  {{wu-link-button label="Bewaar" isNarrow=true isAlt=true onClick=(action "save")}}
</div>
