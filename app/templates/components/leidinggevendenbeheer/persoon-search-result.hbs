<div class="grid">
  <div class="col--9-12">
    <div class="description-data__value">{{persoon.gebruikteVoornaam}} {{persoon.achternaam}}</div>
    <div class="description-data__label js-accordion {{if showDetails "js-accordion--open"}}">
      <p>
        {{#if persoon.identificator.identificator}}
          {{mandatenbeheer/display-rrn persoon.identificator.identificator}},
          <br>
        {{/if}}
        {{persoon.geslacht.label}},
        {{#if persoon.geboorte.datum}}
          geboortedatum: {{moment-format persoon.geboorte.datum 'DD-MM-YYYY'}}
        {{/if}}
      </p>
      <div class="accordion__content form__group u-padding--round--tiny u-spacer--none">
      </div>
    </div>
  </div>
  <div class="col--3-12 u-align--right">
     {{#wu-button class="button button--narrow u-spacer--top--tiny" onClick=(action "select")}}Selecteer als functionaris{{/wu-button}}
  </div>
</div>