{{title bestuurseenheid.classificatie.label " " bestuurseenheid.naam " " model.bestuursfunctie.rol.label}}
{{#unless hasActiveChildRoute}}
  <div class="col--9-12--m col--1-1--s u-border--light--right {{if hasActiveChildRoute "col--5-12 u-visible--tablet-landscape-up" "col--10-12"}}">
    <div class="container-flex--contain">
      <div class="u-border--light--bottom">
        <ul class="inline-list inline-list--bordered smaller u-background--gray-lightest u-padding--rl--small u-padding--tb--tiny">
          <li>{{#link-to "leidinggevendenbeheer.bestuursfuncties"}}Leidinggevenden functies {{bestuurseenheid.classificatie.label}} {{bestuurseenheid.naam}}{{/link-to}}</li>
          <li>{{bestuursfunctie.rol.label}}</li>
        </ul>
      </div>
      <div class="u-border--light--bottom u-padding--round--small">
        <div class="grid">
          <div class="col--12-12">
            <h1 class="h4 u-spacer--tiny">{{bestuurseenheid.classificatie.label}} {{bestuurseenheid.naam}}: {{bestuursfunctie.rol.label}}</h1>
          </div>
          <div class="col--8-12">
            <ul class="inline-list inline-list--bordered small text-light">
              <li>
                <p class="text-fade">{{bestuursfunctie.contactinfo.telephone}}</p>
              </li>
              <li>
                <p>{{bestuursfunctie.contactinfo.email}}</p>
              </li>
              <li>
                <p>Nepstraat 7B, 3500 Hasselt
                  {{#link-to "leidinggevendenbeheer.bestuursfuncties.contact-info" bestuursfunctie.id}}
                    <button class="button button--link button--small button--narrow u-spacer--left--small delete-me-toggle-contactdetails-edit"><i class="vi vi-edit button__icon"></i><span class="u-visually-hidden">Bewerk contactgegevens</span></button>
                  {{/link-to}}
                </p>
              </li>
            </ul>
          </div>
          <div class="col--4-12 col--1-1--xs u-align-right--tablet-portrait-up">
            {{#wu-button
                onClick=(action "handleVoegNieuweAanstellingsperiodeClick")
                isNarrow=true 
                isSmall=true}}<i class="vi vi-plus"></i>Voeg nieuwe aanstellingsperiode toe{{/wu-button}}
          </div>
        </div>
      </div>
      {{leidinggevendenbeheer/functionaris-table
        class="container-flex--contain"
        content=model
        sort=sort
        page=page
        size=size
        displaySubset=hasActiveChildRoute
        filter=filter
        renderSmallTable=hasActiveChildRoute
        data-test-loket="leidinggevendenbeheer-table"}}
      {{#if (is-empty model)}}
        <div class="u-align-center u-padding--round--small" colspan="6">
          <p class="u-spacer--tiny">Geen aanstellingsperiode voor de functie algemeen directeur toegevoegd.&nbsp;</p>
          {{wu-button label=(concat "Voeg aanstellingsperiode " bestuursfunctie.rol.label " toe")
              onClick=(action "handleVoegNieuweAanstellingsperiodeClick")
              isNarrow=true}}
        </div>
      {{/if}}
    </div>
  </div>
{{/unless}}
{{outlet}}