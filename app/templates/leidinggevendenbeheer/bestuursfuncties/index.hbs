{{title "Leidinggevendenbeheer" " " bestuurseenheid.classificatie.label " " bestuurseenheid.naam}}

<AuToolbar @border="bottom" @size="large">
  <AuToolbarGroup>
    <AuHeading @skin="2">Leidinggevendenbeheer{{if allowed " â€” Overzicht functies"}}</AuHeading>
  </AuToolbarGroup>
</AuToolbar>

<div class="au-c-body-container au-c-body-container--scroll">
  {{#if (or (not allowed) (eq model.length 0))}}
    <div class="au-o-box">
      <AuAlert @alertIcon="info-circle" @alertsize="small">
        <p>Voor de bestuurseenheid {{bestuurseenheid.classificatie.label}} {{bestuurseenheid.naam}} moeten er geen leidinggevende functies bijgehouden worden.</p>
      </AuAlert>
    </div>
  {{else}}
    {{#each model as |bestuursfunctie|}}
      {{leidinggevendenbeheer/bestuursfunctie-card
        model=bestuursfunctie
        onClick=(action "displayBestuursfunctie" bestuursfunctie)
      }}
    {{/each}}
  {{/if}}
</div>
