<AuToolbar @border="bottom" @size="large">
  <AuToolbarGroup>
    <AuHeading @skin="2" data-test-loket="subsidiebeheer-page-title">Subsidiebeheer</AuHeading>
  </AuToolbarGroup>
  <AuToolbarGroup>
    <LinkTo @route="supervision.submissions.new" class="au-c-button" type="button">Vraag nieuwe subsidie aan</LinkTo>
  </AuToolbarGroup>
</AuToolbar>

<AuDataTable
  @content={{this.model}}
  @isLoading={{this.isLoadingModel}}
  @noDataMessage="Geen subsidieaanvragen gevonden."
